{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": "trybe-backend",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "globals": {
        "db": "writable"
    },
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "camelcase": ["error", {
            "ignoreDestructuring": true
        }]
    }
}
